{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug unit tests",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "${fileWorkspaceFolderBasename}",
                "--runInBand",
//                "--passWithNoTests",
//                "--watch",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
		},
    ],
}
